{
  "base": {
    "transparent": "#0000",

    "white": "#fff",
    "black": "#000",

    "red": "#e43b44",
    "darkRed": "#9e2835",
    "darkBlue": "#124e89"
  },

  "ui": {
    "window": {
      "background": "#7f000000",
      "border": "base.white",

      "buttons": {
        "close": {
          "normal": { "stroke": "base.white",   "fill": "base.transparent" },
          "hover":  { "stroke": "base.darkRed", "fill": "base.red" },
          "click":  { "stroke": "base.darkRed", "fill": "base.darkRed" }
        }
      }
    },
    "button": {
      "dock": {
        "hover": "#afff",
        "click": "#6fff"
      }
    },
    "containerGrid": {
      "item": {
        "border": "base.white",
        "highlight": "#3fff"
      }
    },
    "textbox": {
      "placeholder": "#9fffffff",
      "text": "base.white",
      "normal": "#7fffffff",
      "focused": "base.white",
      "caret": "ui.textbox.text"
    }
  },

  "player": {
    "laser": {
      "core": "base.white",
      "destroy": "#ff0044",
      "place": "#2ce8f5",
      "highlight": {
        "inReach": "base.white",
        "outOfReach": "#3fff"
      }
    }
  }
}
