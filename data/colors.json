{
  "base": {
    "transparent": "#0000",

    "white": "#fff",
    "black": "#000",

    "red": "#e43b44",
    "darkRed": "#9e2835",
    "darkBlue": "#124e89"
  },

  "world": {
    "atmosphere": {
      "high": "_black",
      "low": "_darkBlue"
    }
  },

  "ui": {
    "window": {
      "background": "#7f000000",
      "border": "_white",

      "buttons": {
        "close": {
          "normal": { "stroke": "_white",   "fill": "_transparent" },
          "hover":  { "stroke": "_darkRed", "fill": "_red" },
          "click":  { "stroke": "_darkRed", "fill": "_darkRed" }
        }
      }
    },
    "button": {
      "dock": {
        "hover": "#afff",
        "click": "#6fff"
      }
    },
    "containerGrid": {
      "item": {
        "border": "_white",
        "highlight": "#3fff"
      }
    }
  },

  "player": {
    "laser": {
      "core": "_white",
      "destroy": "#ff0044",
      "place": "#2ce8f5",
      "highlight": {
        "inReach": "_white",
        "outOfReach": "#3fff"
      }
    }
  }
}
